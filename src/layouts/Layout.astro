---
import "../global.css";
import Navbar from "../components/Navbar.astro";
interface Props {
  title?: string;
}
const { title = "Portfolio de Marc" }: Props = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
    <meta
      name="description"
      content="Portfolio of Marc Plana, full-stack developer and computer engineering student."
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
