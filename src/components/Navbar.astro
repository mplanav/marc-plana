<nav class="navbar">
  <a href="#about">HOME</a>
  <a href="#projects">PROJECTS</a>
  <a href="#tech-stack">TECHNOLOGIES</a>
  <a href="#about-me">ABOUT ME</a>
  <a href="#contact-me">CONTACT ME</a>
</nav>
<div class="navbar-spacer"></div>
<style>
  /* NAVBAR styles */
html {
  scroll-behavior: smooth;
}

.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  font-family: "Playfair Display", serif;
  background-color: rgba(200, 200, 200, 0.7); /* gris translúcido */
  backdrop-filter: blur(5px);
  display: flex;
  justify-content: space-around; /* distribución proporcional horizontal */
  align-items: center;
  padding: 1rem 2rem;
  z-index: 1000;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  flex-wrap: wrap; /* permite mejor comportamiento responsive */
}

.navbar a {
  color: black;
  text-decoration: none;
  font-weight: bold;
  font-size: 1rem;
  transition: all 0.3s ease;
  position: relative;
  padding: 0.5rem;
}

.navbar a:hover {
  color: var(--color2);
}

.navbar a::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -4px;
  width: 0%;
  height: 2px;
  background: black;
  transition: width 0.3s ease;
}

.navbar a:hover::after {
  width: 100%;
}

/* Espaciador para compensar el navbar fijo */
.navbar-spacer {
  height: 70px;
}

/* Responsive: conserva diseño horizontal */
@media (max-width: 600px) {
  .navbar {
    flex-direction: row;
    gap: 1rem;
    padding: 1rem;
    transition: transform 0.3s ease-in-out;
    will-change: transform;
  }

  .navbar.hidden {
  transform: translateY(-100%);
}

  .navbar a {
    font-size: 0.9rem;
    padding: 0.4rem;
  }
}

</style>
